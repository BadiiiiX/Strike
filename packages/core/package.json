{
  "name": "@badiiix/strike-core",
  "version": "0.1.0",
  "description": "Strike â€” lightweight sprite runtime. Actor-driven scheduling, framework-agnostic core.",
  "keywords": [
    "sprite",
    "canvas",
    "animation",
    "viewport",
    "typescript",
    "runtime"
  ],
  "license": "MIT",
  "author": {
    "email": "contact@mehdi-ali.dev",
    "name": "BadiiiX"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BadiiiiX/Strike.git",
    "directory": "packages/strike-core"
  },
  "bugs": {
    "url": "https://github.com/BadiiiiX/Strike/issues"
  },
  "homepage": "https://github.com/BadiiiiX/Strike",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "bun run clean && bun run typecheck && bun run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.5.0"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "sourcemap": true,
    "minify": false,
    "clean": true,
    "treeshake": true,
    "target": "es2020"
  }
}
